{% extends "EzSummerBeerSiteBundle::pagelayout.html.twig" %}

{% block content %}
<section class="content-11 content-view-full content-type-beer">
    <div class="container">
        <div class="row">
            <h1>{{ "ezbeer.beer.styles"|trans({}, "beer") }}</h1>
        </div>

        <div class="content-view-line">
            {% for child in children %}
                <div class="row">
                    <h2><a href="{{ path(child) }}">{{ ez_content_name(child.contentInfo) }}</a></h2>
                </div>

            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
