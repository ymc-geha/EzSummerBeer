<div class="content-view-line content-type-beer">
    <div class="row">
        <div class="col-md-12">
            <h2><a href="{{ path(location) }}">{{ ez_content_name(content) }}</a></h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="attribute-description">
                <p>
                    {{ ez_field_value(content, "description").text|slice(0, 300) ~ "..." }}
                </p>
            </div>
        </div>

        <div class="col-md-4 ">
            <div class="thumbnail">
                {{ ez_render_field(content, "label", {"parameters": {"alias": "medium"}}) }}
            </div>
        </div>
    </div>
</div>
